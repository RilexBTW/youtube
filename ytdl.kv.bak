#:import Thread threading.Thread
<Button>:
    font_size: 40

    # creating button
    # a button 30 % of the width and 50 %
    # of the height of the layout
    size_hint: 0.3, 0.3


<MyFloatLayout>:
    Button:
        text: "MP3"
        pos_hint :{'center_x':0.0, 'center_y':0.0}
        size_hint: 0.5,0.5
        background_color: (0.06, .36, .4, .675)
        font_size: 40
        pos_hint: {"x":1, "y":6}
        on_press: Thread(target=root.mp3())
    Button:
        text: "MP4"
        pos_hint: {"x":1, "y":3}
        size_hint: 0.5,0.5
        background_color: (0.06, .36, .4, .675)
        font_size: 40
        on_press: Thread(target=root.mp4())
    Button:
        text: "Download"
        pos_hint :{'center_x':0.0, 'center_y':0.0}
        size_hint: 100, 0.5
        background_color: (0.06, .36, .4, .675)
        font_size: 40
        width: 20
        size_hint_x: 10
        on_press: Thread(target=root.downloadCallback())
    TextInput:
        multiline: False
        padding_y: 0.5,0.5
        size_hint: 10, 10
