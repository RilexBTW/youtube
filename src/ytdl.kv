#:import Thread threading.Thread

<FloatLayout>:
    canvas.before:
        Color:
            rgba: (20/255,20/255,24/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    url_text_input: url
    orientation: "vertical"
    size: root.width, root.height
    Label:
        id: title
        text: root.title
        pos_hint: {"x":0, "top":1.3}
        font_size: 60
#    Button:
#        text:"Download"
#        background_color: 0.4, 0.5, 0.6, 1
#        pos_hint: {"y":0.08, "right":0.83}
#        size_hint: 0.75,0.25
#        on_press: Thread(target=root.downloadCallback())
    TextInput:
        multiline: False
        size_hint: 0.70, 0.05
        pos_hint: {"x":0.15, "y":0.40}
        id: url
    Button:
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.20, "y":0.09}
        text: "Download"
        on_release: Thread(target=root.start_download_thread())
    Button:
        size_hint: 0.2, 0.2
        pos_hint: {"x": 0.50, "y":0.50}
        text: "MP3"
        on_press: root.mp3()
    Button:
        size_hint: 0.2, 0.2
        pos_hint: {"x": 0.30, "y":0.50}
        text: "MP4"
        on_press: root.mp4()



