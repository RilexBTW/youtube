#:import Thread threading.Thread

<FloatLayout>:
    orientation: "vertical"
    size: root.width, root.height
    Spinner:
        id: spinner_id
        text: "Format"
        values: ["MP3", "MP4"]

        on_text: root.spinner_clicked(spinner_id.text)
        pos_hint: {"x": 0.25, "y":0.42}
        size_hint: 0.5,0.2

    Label:
        text: "Youtube Downloader"
        pos_hint: {"x":0, "top":1.3}
        font_size: 60
#    Button:
#        text:"Download"
#        background_color: 0.4, 0.5, 0.6, 1
#        pos_hint: {"y":0.08, "right":0.83}
#        size_hint: 0.75,0.25
#        on_press: Thread(target=root.downloadCallback())
    TextInput:
        multiline: False
        size_hint: 1, 0.05
        pos_hint: {"x":0, "y":0.30}
        id: url
    Label:
        id: click_label
        text: "Select Format"
        font_size: 32
        pos_hint: {"x":0, "y":0.20}
    Button:
        id: click_label
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.20, "y":0.09}
        text: "Download"
        on_press: Thread(target=root.downloadCallback())        


    Label:
        text: ''
